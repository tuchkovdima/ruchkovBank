<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="0.75"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_width="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/currencyImage"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:maxWidth="40dp"
                    android:maxHeight="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/currencyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Валюта"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/currencyDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:layout_marginLeft="10dp"
                android:text="Название валюты даже если выходит за пределы"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/currencyBuyValue"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0.00"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_width="wrap_content" />
        <TextView
            android:id="@+id/currencyBuyArrow"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="↑"
            android:layout_marginLeft="-20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:layout_width="wrap_content" />

        <TextView
            android:id="@+id/currencySellValue"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0.00"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_width="wrap_content" />
        <TextView
            android:id="@+id/currencySellArrow"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="↓"
            android:layout_marginLeft="-20dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:layout_width="wrap_content" />

    </LinearLayout>


</LinearLayout>



